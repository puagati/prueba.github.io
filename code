  <script>
    // Formato local ES con zona horaria fija a Madrid por defecto
    const DEFAULT_TZ = 'Europe/Madrid';

    function formatTime(d, tz){
      return new Intl.DateTimeFormat('es-ES', {
        hour: '2-digit', minute: '2-digit', second: '2-digit',
        hour12: false, timeZone: tz
      }).format(d);
    }
    function formatDate(d, tz){
      return new Intl.DateTimeFormat('es-ES', {
        weekday: 'long', year: 'numeric', month: 'long', day: 'numeric',
        timeZone: tz
      }).format(d);
    }

    function getPreferredTZ(){
      try{
        // Usa la zona del navegador si existe; si no, Madrid.
        return Intl.DateTimeFormat().resolvedOptions().timeZone || DEFAULT_TZ;
      }catch(e){
        return DEFAULT_TZ;
      }
    }

    const tz = getPreferredTZ();
    document.getElementById('tz').textContent = tz;

    function tick(){
      const now = new Date();
      document.getElementById('clock').textContent = formatTime(now, tz);
      document.getElementById('date').textContent  = formatDate(now, tz);
    }
    tick();
    setInterval(tick, 1000);
  </script>
